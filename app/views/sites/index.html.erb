<p id="notice"><%= notice %></p>

<div class="card">
  <h2 class="card-header bg-primary">All Venues</h2>
  <div class="card-body">

<table class="table table-striped table-bordered data-table">
  <thead>
    <tr class="warning">
      <th>Name</th>
      <% if can? :manage, 'Site' %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><a href="/sites/<%=site.id%>"><%= site.name %></a></td>
        <% if can? :manage, 'Site' %>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Remove', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>

<br>

<% if can? :manage, 'Site' %>
  <%= link_to 'New Venue', new_site_path , class: 'btn btn-success' %>
<% end %>
