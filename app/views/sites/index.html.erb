<p id="notice"><%= notice %></p>

<h1>All Go Karting Venues</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr class="warning">
      <th>Name</th>
      <% if can? :manage, 'Site' %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <% if can? :manage, 'Site' %>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Remove', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :manage, 'Site' %>
  <%= link_to 'New Site', new_site_path , class: 'btn btn-success' %>
<% end %>
