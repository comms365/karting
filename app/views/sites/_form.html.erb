<%= simple_form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="card">
  <h2 class="card-header bg-primary"><% if @site.new_record? %> New Venue <% else %> Edit Venue <% end %></h2>
  <div class="card-body">

  <div class="row">
    <div class='col-lg-4'>
      <%= f.label :name %>
    </div>
    <div class="col-lg-8">
      <%= f.input :name , label: false %>
    </div>
  </div>

  <div class="row">
    <div class='col-lg-4'>
      <%= f.label :location %>
    </div>
    <div class="col-lg-8">
      <%= f.input :location , label: false %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

  </div>
</div>